#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/nginze/Documents/streams/webrtc-server/node_modules/.pnpm/nodemon@2.0.22/node_modules/nodemon/bin/node_modules:/home/nginze/Documents/streams/webrtc-server/node_modules/.pnpm/nodemon@2.0.22/node_modules/nodemon/node_modules:/home/nginze/Documents/streams/webrtc-server/node_modules/.pnpm/nodemon@2.0.22/node_modules:/home/nginze/Documents/streams/webrtc-server/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/nginze/Documents/streams/webrtc-server/node_modules/.pnpm/nodemon@2.0.22/node_modules/nodemon/bin/node_modules:/home/nginze/Documents/streams/webrtc-server/node_modules/.pnpm/nodemon@2.0.22/node_modules/nodemon/node_modules:/home/nginze/Documents/streams/webrtc-server/node_modules/.pnpm/nodemon@2.0.22/node_modules:/home/nginze/Documents/streams/webrtc-server/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../nodemon/bin/nodemon.js" "$@"
else
  exec node  "$basedir/../nodemon/bin/nodemon.js" "$@"
fi
